{
    "name": "cgf.cameracontrol.main.gui",
    "version": "1.0.0",
    "description": "Gui Application that allows to control Blackmagicdesign ATEM Switcher and it's associated cameras using e.g. gamepads",
    "keywords": [
        "camera",
        "control"
    ],
    "homepage": "https://github.com/sensslen/Cgf.CameraControl.Main.Cli#readme",
    "bugs": {
        "url": "https://github.com/sensslen/Cgf.CameraControl.Main.Cli/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sensslen/Cgf.CameraControl.Main.Cli.git"
    },
    "license": "MIT",
    "author": {
        "name": "Simon Ensslen",
        "email": "sensslen@gmail.com"
    },
    "main": ".webpack/main",
    "scripts": {
        "prestart": "sort-package-json",
        "start": "electron-forge start",
        "postinstall": "sort-package-json",
        "prepackage": "sort-package-json",
        "package": "electron-forge package",
        "premake": "sort-package-json",
        "make": "electron-forge make",
        "prepare": "sort-package-json",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts ."
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "cgf.cameracontrol.main.gui"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/MainWindow/MainWindow.html",
                                    "js": "./src/MainWindow/renderer.tsx",
                                    "preload": {
                                        "js": "./src/MainWindow/preload/preload.ts"
                                    },
                                    "name": "main_window"
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "dependencies": {
        "cgf.cameracontrol.main.core": "^1.0.2-beta.15",
        "cgf.cameracontrol.main.gamepad": "^0.9.1-beta.11",
        "electron-squirrel-startup": "^1.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "styled-components": "^5.2.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.3",
        "@types/styled-components": "^5.1.7",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "copy-webpack-plugin": "^6.4.1",
        "css-loader": "^5.2.0",
        "electron": "12.0.1",
        "eslint": "^7.23.0",
        "eslint-plugin-import": "^2.22.1",
        "fork-ts-checker-webpack-plugin": "^6.2.0",
        "node-loader": "^1.0.2",
        "sort-package-json": "^1.49.0",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.1.0",
        "typescript": "^4.2.3"
    },
    "productName": "Cgf.CameraControl.Main.Gui"
}
